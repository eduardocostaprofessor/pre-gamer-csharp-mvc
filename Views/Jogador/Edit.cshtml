@model Jogador

@{
    ViewData["Title"] = "Jogador Editar";
}

<h1>Jogadores > Editar</h1>

<form method="post" action='@Url.Action("Atualizar")'>

    <input type="hidden" id="IdJogador" name="IdJogador" value="@ViewBag.Jogador.IdJogador">

    <label for="Nome">Nome</label>
    <input type="text" id="Nome" name="Nome" placeholder="Nome do Jogador" required value="@ViewBag.Jogador.Nome">

    <label for="Email">Email</label>
    <input type="email" id="Email" name="Email" placeholder="Email do Jogador" required value="@ViewBag.Jogador.Email">

    <label for="Senha">Senha</label>
    <input type="password" id="Senha" name="Senha" placeholder="Informa a senha" required
        value="@ViewBag.Jogador.Senha">

    <label for="IdEquipe">Equipe</label>
    <select name="IdEquipe" id="IdEquipe" required>
        <option value="">Selecione uma equipe</option>
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            @if (equipe.IdEquipe == ViewBag.Jogador.IdEquipe)
            {

                <option value="@equipe.IdEquipe" selected>@equipe.Nome</option>
            }
            else
            {
                <option value="@equipe.IdEquipe">@equipe.Nome</option>
            }
        }
    </select>

    <button>Atualizar</button>
</form>